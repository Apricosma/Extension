{
	"compilerOptions": {
		"outDir": "dist/",
		"strict": true,
		"sourceMap": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "ES6",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"paths": {
			"*": ["@types/*.d.ts"],
			"src/*": ["./src/*"],
			"public/*": ["./public/*"],
			"@typings/*": ["../Shared/*", "Typings/*", "node_modules/seventv-typings/*"],
		}
	},

	"include": [
		"src/*",
		"src/**/*",
		"src/custom.d.ts"
	]
}
